# Configuración de Django para PRODUCCIÓN
DEBUG=False
SECRET_KEY=genera-una-clave-secreta-fuerte-aqui

# Base de datos PostgreSQL
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=nombre_base_datos
DATABASE_USER=usuario_db
DATABASE_PASSWORD=contraseña_segura
DATABASE_HOST=host-postgresql.ejemplo.com
DATABASE_PORT=5432

# Hosts permitidos (separados por coma, sin espacios)
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com

# Configuración de Render (si usas Render)
RENDER_EXTERNAL_HOSTNAME=tu-app.onrender.com

# Configuración de Redis (opcional, para caché)
REDIS_URL=redis://usuario:contraseña@host:puerto/0

# Configuración de email (opcional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-contraseña-app

# Configuración de archivos estáticos
STATIC_ROOT=/var/www/staticfiles
MEDIA_ROOT=/var/www/media
